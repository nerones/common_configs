[core]
	editor = vim
[diff]
	guitool = meld
	tool = meld
[alias]
	l = log --oneline --decorate --graph --all
        d = diff --word-diff -w
        fo = fetch origin
        foprune = fetch origin --prune
        co = checkout
        ci = commit
        st = status
        br = branch
        hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
        type = cat-file -t
        dump = cat-file -p
[push]
	default = simple
[commit]
	gpgsign = true
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[pull]
	ff = only
